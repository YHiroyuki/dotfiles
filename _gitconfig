[include]
    path = .gitconfig.local
[ghq]
    root = ~/work/src/
[alias]
    br = branch
    co = checkout
    st = status
    aa = add -A
    d = diff
    dw = diff --color-words
    co = commit
    com = commit -m
    pb = !git branch | peco
    pl = !git pull origin `git rev-parse --abbrev-ref HEAD`
    ps = !git push origin `git rev-parse --abbrev-ref HEAD`
    psf = !git push -f origin `git rev-parse --abbrev-ref HEAD`
    lg = log --graph --all --decorate --oneline
    ls = !git --no-pager log -10 --oneline --decorate
    cp = !git branch -a --sort=-authordate | sed 's/[* ]//' | sed 's remotes/origin/  ' | sed '/HEAD ->/d' | awk '!a[$0]++' | peco |xargs git checkout
    ru = remote update origin
[core]
    excludesfile = ~/.gitignore
    editor = nvim
